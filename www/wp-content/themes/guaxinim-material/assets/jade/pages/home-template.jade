extends ../index
prepend header
	- //Template Name: Home
append styles
	link(rel="stylesheet", href!=css("pages/home/home.css"))
block main
	- $posts = get_posts(array('post_type' => 'post', 'numberposts' => 3))
	.posts-container
	:php
		$posts_total = wp_count_posts('post')->publish;
		$posts_length = sizeof($posts);
	#home.home-cell.mdl-cell.mdl-cell--12-col
		.gxn-card.mdl-card.mdl-shadow--2dp
			a(href!=echo('get_site_url()'))
				.mdl-card__media
	- foreach( $posts as $post ):
		- setup_postdata($post)
		+post-card
		- wp_reset_postdata()
	- endforeach
	//- Load More
	- if ( $posts_length < $posts_total ):
		.load-more-container.mdl-cell.mdl-cell--12-col.text-center
			button(data-total-posts!=echo("$posts_total"), data-posts-length!=echo('$posts_length')).load-more.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent Mais Posts
	- endif
