mixin social(classes)
	.social-block(class=classes)
		ul
			:php
				$icons = array (
						'facebook' 	=> "facebook",
						'twitter'		=>	"twitter",
						'pinterest'	=>	"pinterest-p",
						'youtube'		=>	"youtube-play",
						'instagram'	=>	"instagram",
						'linkedin'	=>	"linkedin"
				);
				
			- if(have_rows('socials', 'options')): while(have_rows('socials', 'options')): the_row()
				- $_name = get_sub_field('name');
				- $_url = get_sub_field('url');
				- $_icon = isset($icons[$_name])? $icons[$_name] : $_name;
				li(class!=echo('$_name'))
					a(href!=echo('$_url'), target="_blank")
						i.fa(class!=echo('"fa-{$_icon}"'))
			- endwhile;endif
