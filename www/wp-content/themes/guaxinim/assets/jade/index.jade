include ./blocks/_blocks
doctype html
head
	block meta
		meta(charset!= "<?php bloginfo( 'charset' ); ?>")
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel='profile', href='http://gmpg.org/xfn/11')
		link(rel='pingback', href!="<?php bloginfo( 'pingback_url' ); ?>")

	block favicon
		- if(!get_option( 'site_icon' )):
			link(href!='<?php echo get_template_directory_uri(); ?>/assets/images/favicon.ico', rel='shortcut icon')
		- endif
	
	block scripts
		<!--[if lt IE 9]>
		script(src!='<?php echo get_template_directory_uri(); ?>/assets/js/html5.js')
		<![endif]-->	
		script(src!='<?php echo get_template_directory_uri(); ?>/assets/js/html5.js')
		- wp_head();
	block layout
		- $layout = "sidebar";
body("<?php body_class(); ?>")
	block script-fb
		script
			:verbatim
				var FB_APP_ID = "<?php echo get_field('fb_app_id','options') ?>";
	block header
		include ./includes/_header.jade
	block wrapper
		div#wrapper.container
			:php
				switch($layout){
					case "full":
						$_class = odin_classes_page_full();
						break;
					case "sidebar":
						$_class = odin_classes_page_sidebar();
						break;
				}
			main#content(class!="<?php echo $_class; ?>",tabindex="-1",role="main")
				block main
					- if(have_posts()):
						.masonry
							.grid
								.grid-sizer(class="col-xs-12 col-sm-6 col-md-4 col-lg-4")
								- while ( have_posts() ) : the_post();
									.grid-item(class="col-xs-12 col-sm-6 col-md-4 col-lg-4")
										.grid-item-content.margin
											- get_template_part( 'content', get_post_format() );
								- endwhile;
						- odin_paging_nav();
					- else:
						- get_template_part( 'content', 'none' );
					- endif
			block sidebar
				- if($layout == "sidebar"):
					.hidden-xs.hidden-sm
						- get_sidebar();
				- endif
	block footer
		include ./includes/_footer.jade
